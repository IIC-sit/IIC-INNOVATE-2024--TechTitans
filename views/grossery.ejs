<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Submit Grocery List</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .form-container {
      margin: 50px auto;
      max-width: 600px;
      padding: 30px;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .form-container h2 {
      margin-bottom: 20px;
      text-align: center;
      color: #333;
    }
  </style>
</head>
<body>

<div class="container">
  <div class="form-container">
    <h2>Submit Grocery List</h2>
    <form action="/submit-grocery" method="POST">
      <!-- Apartment ID -->
      <div class="mb-3">
        <label for="apartmentId" class="form-label">Apartment ID</label>
        <input type="text" class="form-control" id="apartmentId" name="apartmentId" placeholder="Enter Apartment ID" required>
      </div>
      <!-- House ID -->
      <div class="mb-3">
        <label for="houseId" class="form-label">House ID</label>
        <input type="text" class="form-control" id="houseId" name="houseId" placeholder="Enter House ID" required>
      </div>
      <!-- Grocery Items -->
      <div id="groceryItems">
        <div class="grocery-item mb-3">
          <div class="row">
            <div class="col-md-6">
              <label for="item1" class="form-label">Item</label>
              <input type="text" class="form-control" id="item1" name="groceryItems[0][item]" placeholder="Enter item name" required>
            </div>
            <div class="col-md-6">
              <label for="quantity1" class="form-label">Quantity</label>
              <input type="number" class="form-control" id="quantity1" name="groceryItems[0][quantity]" placeholder="Enter quantity" required>
            </div>
          </div>
        </div>
      </div>
      <!-- Add More Items Button -->
      <button type="button" class="btn btn-secondary mb-3" id="addItemButton">Add More Items</button>
      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary w-100">Submit</button>

      <a href="/generate-total-grocery">Final</a>
    </form>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.getElementById('addItemButton').addEventListener('click', function() {
    const groceryItemsDiv = document.getElementById('groceryItems');
    const itemIndex = groceryItemsDiv.children.length;
    const newItem = `
      <div class="grocery-item mb-3">
        <div class="row">
          <div class="col-md-6">
            <label for="item${itemIndex}" class="form-label">Item</label>
            <input type="text" class="form-control" id="item${itemIndex}" name="groceryItems[${itemIndex}][item]" placeholder="Enter item name" required>
          </div>
          <div class="col-md-6">
            <label for="quantity${itemIndex}" class="form-label">Quantity</label>
            <input type="number" class="form-control" id="quantity${itemIndex}" name="groceryItems[${itemIndex}][quantity]" placeholder="Enter quantity" required>
          </div>
        </div>
      </div>
    `;
    groceryItemsDiv.insertAdjacentHTML('beforeend', newItem);
  });
</script>

</body>
</html>
